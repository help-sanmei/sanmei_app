<%= form_for(@team, html:{class: 'form-horizontal'}) do |f| %>
<h3>チーム作成</h3>
     <div class="field">
      <%= f.label :チーム名 %>
      <%= f.text_field :team_name, :class => 'team_name' %>
     </div>

     <div class="field">
      <%= f.label :チーム詳細 %>
      <%= f.text_area :team_description, :class => 'team_description' %>
     </div>

     <div class="field">
      <%= f.label :最大人数 %>
      <%= f.number_field :max_number, :class => 'max_number' %>
     </div>

      <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
               <th>苗字</th>
               <th>名前</th>
               <th>生年月日</th>
               <th>性別</th>
               <th>Action</th>
            </tr>
          </thead>
 
          
            <tbody id='detail-association-insertion-point'>
              <%= f.fields_for :staffs do |builder| %>
                <%= render 'staff_fields', f: builder %>
              <% end %>
            </tbody>
          
          
          
      </table>
      
         <%= link_to_add_association 'Add new', f, :staffs,
          class: 'btn btn-default',
          data: {
            association_insertion_node: '#detail-association-insertion-point',
            association_insertion_method: 'append' }
         %>

      <br><br>
      <%= f.submit '登録', class: 'btn btn-primary' %>

<% end %>
