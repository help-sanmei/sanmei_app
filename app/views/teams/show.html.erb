<%= form_for(@team, html:{class: 'form-horizontal'}) do |f| %>
<h3>スタッフ選択</h3>
     <div class="field">
      チーム名
      <%= @team.team_name %>
     </div>

     <div class="field">
      チーム詳細
      <%= @team.team_description %>
     </div>

     <div class="field">
      最大人数
      <%= @team.max_number %>
     </div>
     
     <input type="hidden" value="<%= @team.id %>" >

      <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
               <th>選択</th>
               <th>苗字</th>
               <th>名前</th>
               <th>生年月日</th>
               <th>性別</th>
            </tr>
          </thead>
                
            <tbody>

                  <% @staffs.each do |staff| %>
                     <tr>
                      <% if staff.status == 1 %>
                       <td><%= check_box 'staff', "status", { multiple: true, :checked => true}, staff.id %></td>
                      <% else %>
                       <td><%= check_box 'staff', "status", { multiple: true, :checked => false}, staff.id %></td>
                      <% end %>
                      <td><%= staff.family_name %></tsd>
                      <td><%= staff.first_name %></td>
                      <td><%= staff.birthday %></td>
                      <td><%= staff.gender %></td>
                     </tr>
                   <% end %>
            </tbody>
          
          
          
       </table>


      <br><br>
      <%= f.submit %>
<% end %>